<?xml version="1.0" encoding="utf-8" ?>

<routes>
    <!--front-->
    <route path="" action="index" controller="PostController"/>
    <route path="article" action="article" controller="PostController" params="id"/>
    <route path="create_article" action="createArticle" controller="PostController"/>
    <route path="delete_article" action="deleteArticle" controller="PostController" params="id"/>
    <route path="delete_comment" action="deleteComment" controller="PostController" params="id"/>
    <route path="create-comment" action="createComment" controller="PostController"/>

    <!-- admin -->
    <route path="account" action="account" controller="UsersController"/>
    <route path="admin" action="admin" controller="UsersController"/>

    <!-- security-->
    <route path="login" action="login" controller="SecurityController"/>
    <route path="create_account" action="createAccount" controller="SecurityController"/>
    <!--<route p="logout" controller="SecurityController" action="logout"/>-->

 </routes>